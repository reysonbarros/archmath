<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:padding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/btn_menu"
                android:textColor="@color/txt_btn_menu"
                android:layout_margin="0.8dp"
                android:padding="8dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/capacidade_memoria"
                android:id="@+id/btncapacidadememoria"
                android:text="Capacidade da Memória" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/btn_menu"
                android:textColor="@color/txt_btn_menu"
                android:layout_margin="0.8dp"
                android:padding="8dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/tamanho_celula"
                android:id="@+id/btntamanhocelula"
                android:text="Tamanho da Célula" />

        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/pbbar" />
    </LinearLayout>
</RelativeLayout>
